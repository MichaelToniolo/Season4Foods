<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/menu_principal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Season4Foods"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:gravity="center"
        android:fontFamily="cursive"

        >


    </TextView>



    <TextView
        android:id="@+id/TxtMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione o Mês para Encontrar o Alimento Sazonal Perfeito"
        android:textAlignment="center"
        android:background="@color/MyBackgroundFontColor"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:textFontWeight="@android:integer/config_mediumAnimTime"

     />


    //LinearLayout Calendário
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <CalendarView

            android:id="@+id/CalendarioView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/CalendarColor"

            android:maxDate="12/31/2019"
            android:minDate="01/01/2019"
            android:weekDayTextAppearance="@color/cardview_dark_background"


            >
        </CalendarView>
    </LinearLayout>
    <TextView

        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alimentos Sazonais Disponíveis"
        android:fontFamily="cursive"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:background="@color/MyBackgroundFontColor"
        android:textSize="25dp"
        tools:visibility="visible" />



    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista_alimentos"
        android:background="@color/MyBackgroundFontColor"

        ></ListView>



    <!--AQUI COMEÇA O BOTÃO + TEXTO ABOUT US-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MyBackgroundFontColor"
        android:gravity="right"
        >

        <Button
            android:id="@+id/AboutButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:background="@drawable/iconabout">

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:fontFamily="cursive"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            >

        </TextView>
    </LinearLayout>
    <!--AQUI TERMINA O B.O. DO ABOUT-->
    </LinearLayout>




