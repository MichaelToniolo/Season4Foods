<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/menu_principal"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/AboutButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_sobre" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Season4Foods"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp">


        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


    <TextView
        android:id="@+id/TxtMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione o Mês para Encontrar o Alimento Sazonal Perfeito"
        android:textAlignment="center"
        android:background="@color/MyBackgroundFontColor"
        android:textSize="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:textFontWeight="@android:integer/config_mediumAnimTime"

     />


    //LinearLayout Calendário
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <CalendarView

            android:id="@+id/CalendarioView"
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:background="@color/CalendarColor"
            android:shownWeekCount="5"
            android:maxDate="12/31/2019"
            android:minDate="01/01/2019"


            android:weekDayTextAppearance="@color/cardview_dark_background"></CalendarView>
    </LinearLayout>

    <TextView

        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MyBackgroundFontColor"
        android:fontFamily="cursive"
        android:text="Alimentos Sazonais Disponíveis"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        tools:visibility="visible" />


    <ListView
        android:id="@+id/lista_alimentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/MyBackgroundFontColor"

        ></ListView>

</LinearLayout>


