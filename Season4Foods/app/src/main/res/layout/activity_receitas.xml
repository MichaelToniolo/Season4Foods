<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundmain3"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/MyBackgroundFontColor"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CBFFFFFF">

            <Button
                android:id="@+id/btn_volte"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Receitas"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="@android:integer/config_mediumAnimTime"
                android:textSize="35dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/nome_alimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#CBFFFFFF"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45dp" />

        <ImageView
            android:id="@+id/Imagem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            >

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            y<ListView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lista_receitas"
                android:background="@color/MyBackgroundFontColor"

                ></ListView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>