<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backgroundmain3"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/MyBackgroundFontColor"
                android:fontFamily="cursive"
                android:text="Receitas"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textFontWeight="@android:integer/config_mediumAnimTime"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/Foto_alimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/avatars[3]" />

        </LinearLayout>

        <TextView
            android:id="@+id/nome_alimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimento"
            android:fontFamily="cursive"
            android:layout_gravity="center"
            android:background="@color/MyBackgroundFontColor"
            android:textSize="35dp"/>

        <TextView
            android:id="@+id/texto_banco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="cursive"
            android:layout_gravity="center"
            android:background="@color/MyBackgroundFontColor"
            android:textSize="35dp"/>

